@import url(https://fonts.googleapis.com/css?family=Playfair+Display:400,400italic);
@import url('https://fonts.googleapis.com/css?family=Montserrat');
@import url("https://fonts.googleapis.com/css2?family=Open+Sans:wght@800");
@property --spotlight-x {
  initial-value: 0
  inherits: false
  syntax: '<integer>'
}
@property --spotlight-y {
  initial-value: 0
  inherits: false
  syntax: '<integer>'
}
@property --alpha {
  initial-value: 1
  inherits: false
  syntax: '<integer>'
}
:root {
  --padding: 5vmin 6vmin;
  --vertical: 5.5s;
  --horizontal: 2.6s;
  --size: clamp(2rem, 50vmin, 4rem);
  --flicker: 0s;
  --bg: #141414;
  --light: hsla(45, 80%, 90%, var(--alpha));
  --text: #1a1a1a;
}
@media (max-height: 768px) {
  :root {
    --padding: 12vmin 20vmin;
  }
}
@media (min-width: 768px) {
  :root {
    --size: clamp(5rem, 50vmin, 15rem);
  }
}
*,
*:after,
*:before {
  box-sizing: border-box;
}
body {
  min-height: 100vh;
  display: grid;
  place-items: center;
  background: var(--bg);
}
h1 {
  --light: hsla(45, 80%, 90%, var(--alpha));
  font-family: 'Open Sans', sans-serif;
  font-size: clamp(1rem, 40vmin, var(--upper, 3rem));
  text-transform: uppercase;
  padding: var(--padding);
  margin: 0;
  background: radial-gradient(var(--light), transparent 65%) calc(var(--spotlight-x) * 1%) calc(var(--spotlight-y) * 1%)/10vmin 10vmin no-repeat;
  background-size: var(--size) var(--size);
  background-color: var(--text);
  -webkit-animation: spotlight-v var(--vertical) infinite, spotlight-h var(--horizontal) infinite alternate linear, flicker var(--flicker) infinite;
          animation: spotlight-v var(--vertical) infinite, spotlight-h var(--horizontal) infinite alternate linear, flicker var(--flicker) infinite;
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
}
h1:after {
  content: "Spotlight";
  text-transform: uppercase;
  position: absolute;
  padding: var(--padding);
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) translateY(calc((-50 + var(--spotlight-y, 0)) * -0.05%));
  filter: blur(12px);
  color: #141414;
  z-index: -1;
  -webkit-animation: spotlight-v var(--vertical) infinite;
          animation: spotlight-v var(--vertical) infinite;
}
@media (min-width: 768px) {
  h1 {
    --upper: 10rem;
  }
}
.dummy,
.spotlight {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.dummy,
.spotlight {
  --light: hsla(45, 80%, 90%, var(--alpha));
  background: radial-gradient(var(--light), transparent 65%) calc(var(--spotlight-x) * 1%) calc(var(--spotlight-y) * 1%)/10vmin 10vmin no-repeat;
  background-size: var(--size) var(--size);
  -webkit-animation: spotlight-v var(--vertical) infinite, spotlight-h var(--horizontal) infinite alternate linear, flicker var(--flicker) infinite;
          animation: spotlight-v var(--vertical) infinite, spotlight-h var(--horizontal) infinite alternate linear, flicker var(--flicker) infinite;
}
.dummy h1 {
  color: transparent;
  background: none;
}
@-webkit-keyframes spotlight-h {
  0% {
    --spotlight-x: 0;
  }
  100% {
    --spotlight-x: 100;
  }
}
@keyframes spotlight-h {
  0% {
    --spotlight-x: 0;
  }
  100% {
    --spotlight-x: 100;
  }
}
@-webkit-keyframes spotlight-v {
  12.5%, 37.5%, 62.5%, 87.5% {
    --spotlight-y: 0;
  }
  0%, 25%, 50%, 75%, 100% {
    --spotlight-y: 100;
  }
}
@keyframes spotlight-v {
  12.5%, 37.5%, 62.5%, 87.5% {
    --spotlight-y: 0;
  }
  0%, 25%, 50%, 75%, 100% {
    --spotlight-y: 100;
  }
}
@-webkit-keyframes flicker {
  0%, 19.999%, 22%, 62.999%, 64%, 64.999%, 72%, 100% {
    --alpha: 1;
  }
  20%, 21.999%, 63%, 63.999%, 65%, 71.999% {
    --alpha: 0;
  }
}
@keyframes flicker {
  0%, 19.999%, 22%, 62.999%, 64%, 64.999%, 72%, 100% {
    --alpha: 1;
  }
  20%, 21.999%, 63%, 63.999%, 65%, 71.999% {
    --alpha: 0;
  }
}

